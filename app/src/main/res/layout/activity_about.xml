<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.bdqn.visitshop.activity.AboutActivity">

    <include layout="@layout/title_bar_activity"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/loginguide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_30"
                android:layout_marginLeft="@dimen/margin_23"
                android:layout_marginRight="@dimen/margin_23"
                android:layout_marginTop="@dimen/margin_20"
                android:lineSpacingExtra="@dimen/margin_10"
                android:text="@string/activity_about_appinfo"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
