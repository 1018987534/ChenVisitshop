<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_checked">

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/shop_activity_item_padding"
        android:layout_marginBottom="@dimen/train_fragment_item_img_bottom"
        android:layout_marginRight="8dp"
        android:src="@mipmap/task_pass" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_arraw"
        android:layout_toRightOf="@+id/iv_state"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shop_activity_item_padding"
            android:text="@string/activity_task_tv_title"
            android:textColor="@color/item_text_title"
            android:textSize="@dimen/task_item_texttitle_size" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/task_item_textdate_marginbottom"
            android:layout_marginTop="@dimen/task_item_textdate_margintop"
            android:text="@string/activity_task_tv_data"
            android:textColor="@color/item_text_date"
            android:textSize="@dimen/task_item_textdate_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_arraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/selector_item_img" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_bg"/>

</RelativeLayout>
